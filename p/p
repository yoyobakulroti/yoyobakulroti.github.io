<body class="flex items-center justify-center p-6">

    <div class="max-w-4xl w-full glass shadow-2xl p-8 md:p-12">
        <header class="text-center mb-10">
            <h1 class="text-4xl font-extrabold text-slate-800 tracking-tight">ProResizer <span class="text-blue-600">2026</span></h1>
            <p class="text-slate-500 mt-2">Ubah resolusi piksel foto Anda dengan standar industri.</p>
        </header>

        <div class="grid md:grid-cols-2 gap-10">
            <!-- Kolom Input -->
            <div class="space-y-6">
                <div class="bg-white/50 p-6 rounded-2xl border border-slate-200">
                    <label class="block text-sm font-semibold text-slate-700 mb-2">Pilih Foto</label>
                    <input type="file" id="upload" accept="image/*" 
                        class="block w-full text-sm text-slate-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100 transition-all cursor-pointer">
                </div>

                <div class="bg-white/50 p-6 rounded-2xl border border-slate-200">
                    <label class="block text-sm font-semibold text-slate-700 mb-2">Target Lebar Baru (px)</label>
                    <div class="relative">
                        <input type="number" id="newWidth" placeholder="Contoh: 1920" 
                            class="w-full px-4 py-3 rounded-xl border border-slate-300 focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all">
                        <span class="absolute right-4 top-3 text-slate-400">pixels</span>
                    </div>
                </div>

                <button onclick="resizeImage()" 
                    class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-4 rounded-xl shadow-lg shadow-blue-200 transform transition active:scale-95">
                    Proses Sekarang
                </button>
            </div>

            <!-- Kolom Preview -->
            <div class="flex flex-col items-center justify-center bg-slate-100/50 rounded-2xl border-2 border-dashed border-slate-300 p-4 relative overflow-hidden min-h-[300px]">
                <p id="placeholderText" class="text-slate-400 text-center">Preview gambar akan muncul di sini</p>
                <canvas id="canvasPreview" class="max-w-full rounded-lg shadow-md hidden"></canvas>
                <div id="downloadArea" class="mt-6 w-full hidden text-center">
                    <!-- Tombol download akan muncul di sini -->
                </div>
            </div>
        </div>
    </div>

    <script>
        function resizeImage() {
            const fileInput = document.getElementById('upload');
            const newWidthInput = document.getElementById('newWidth');
            const newWidth = parseInt(newWidthInput.value);
            const canvas = document.getElementById('canvasPreview');
            const ctx = canvas.getContext('2d');
            const placeholder = document.getElementById('placeholderText');
            const downloadArea = document.getElementById('downloadArea');

            if (!fileInput.files[0] || !newWidth) {
                alert("Mohon pilih file dan tentukan ukuran lebar!");
                return;
            }

            const reader = new FileReader();
            reader.onload = function(e) {
                const img = new Image();
                img.onload = function() {
                    const ratio = newWidth / img.width;
                    const newHeight = img.height * ratio;

                    canvas.width = newWidth;
                    canvas.height = newHeight;

                    // Teknik Penajaman: Menggunakan Image Smoothing
                    ctx.imageSmoothingEnabled = true;
                    ctx.imageSmoothingQuality = 'high';
                    
                    ctx.drawImage(img, 0, 0, newWidth, newHeight);

                    // Update UI
                    placeholder.classList.add('hidden');
                    canvas.classList.remove('hidden');
                    downloadArea.classList.remove('hidden');

                    const dataUrl = canvas.toDataURL('image/png');
                    downloadArea.innerHTML = `
                        <a href="${dataUrl}" download="proresizer_result.png" 
                           class="inline-block bg-emerald-500 hover:bg-emerald-600 text-white px-6 py-2 rounded-full font-medium transition shadow-md">
                            Simpan Hasil (${newWidth}x${Math.round(newHeight)}px)
                        </a>
                    `;
                }
                img.src = e.target.result;
            }
            reader.readAsDataURL(fileInput.files[0]);
        }
    </script>
</body>
